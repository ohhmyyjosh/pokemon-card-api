<h1>{{username}}'s Cards</h1>
<div class="row">
    {{#each pokemon}}
    <div class="column"> 
        <div class="card">
            <h2>
                {{name}}
            </h2>
            <img class="pokemon-image" src="{{getSpriteUrlById id}}" alt="{{name}}">
            <ul>
                <li>
                    <h3>ID: {{id}} </h3>
                </li>
                <li>
                    <h3>Type(s): {{#each type}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</h3>

                </li>
                <li>
                    <h3>HP: {{hp}} </h3>
                </li>
                {{#if willTrade}}
                    <li>
                        <h3>Available for Trade</h3>
                    </li>
                    {{else}}
                    <li>
                        <h3>Not Available for Trade</h3>
                    </li>
                {{/if}}
                    
                {{#if price}}
                    <li>
                        <h3>Price: ${{price}}.00</h3>
                    </li>
                    {{else}}
                    <li>
                        <h3>Not for Sale</h3>
                    </li>
                {{/if}}
            </ul>
        </div>
    </div>     
    {{/each}}
</div>
